<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCalendarEventActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimaryContainer"
        android:id="@+id/appBarLayout"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/top_bar_with_function"
            app:navigationIcon="@drawable/back_arrow"
            app:navigationIconTint="?attr/colorOnPrimaryContainer"
            app:title="Create an event"
            app:titleTextColor="?attr/colorOnPrimaryContainer"
            app:titleCentered="true"
            />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventTitleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Event Title"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/eventTitleEditTextId"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="text"
            android:hint="Event Title" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTimeId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date Time"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dateEditTextId"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="date"
            android:hint="mm-dd-yyyy"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            />
        <EditText
            android:id="@+id/timeEditTextId"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="text"
            android:hint="hh:mm"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locationNameId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/locationNameEditTextId"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="text"
            android:hint="Name of the location" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locationAddressId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Address"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/locationAddressEditTextId"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="text"
            android:hint="Full address of the location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButtonId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/submitButtonId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Submit" />
    </LinearLayout>
</LinearLayout>